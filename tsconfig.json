{
  "compilerOptions": {
    "typeRoots": [
      "./node_modules/@types"
    ],
    "target": "ES2020",
    "lib": [
      "ES2020",
      "dom"
    ],
    "module": "commonjs",
    "noUnusedLocals": true,
    "noErrorTruncation": true,
    "strict": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "isolatedModules": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
